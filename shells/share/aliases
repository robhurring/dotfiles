# Navigation
alias ls='ls -h'
alias ll='ls -lah'
alias la='ls -ah'
alias l='ls -lh'
alias ..='cd ..'
alias cd-='cd -'
alias cd--='cd ~ && cd -'
alias cdd='cd ~/Desktop'

# Misc Helpers
alias fname="find -name"
alias psg='ps ax | grep '
alias tf='tail -f'
alias enc='openssl enc -e -aes-256-cbc -salt -in '
alias dec='openssl enc -d -aes-256-cbc -in '

# Ruby/Rails
alias ss='auto-bundle-exec rails server'
alias ssd='auto-bundle-exec rails server --debugger'
alias sc='auto-bundle-exec rails console'
alias sdb='auto-bundle-exec rails dbconsole'
alias gen='auto-bundle-exec rails generate'

alias bc='bundle console'
alias fm='auto-bundle-exec foreman'
alias fms='foreman start'
alias fws='forewoman start'

function bag() {
  ag "$@" `bundle show --paths`
}

# Git
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gau='git add -u'
alias gs='git status -sb'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit --amend'
alias gl='git l'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grb='git rebase -p'
alias gd='git diff'
alias gdw='git diff -w'
alias gds='git diff --stat'
alias stash='git stash'
alias unstash='git stash pop'
alias gup='git up'
alias gups='stash;git up;unstash'
alias gp='git push'
alias gpt='git push --tags'
alias gpr='git pull --rebase'
alias gf='git fetch --all'
alias grh='git reset --hard'
alias gra!='git reset-all'
